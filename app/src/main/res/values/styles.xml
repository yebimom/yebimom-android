<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:typeface">serif</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="MyTheme.WithNavi" parent="@style/AppTheme"/>

    <style name="MyTheme.FullScreen" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- navigation drawer style -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/font_pink</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/font_pink</item>
    </style>

    <style name="Widget"/>

    <style name="Widget.MyTheme"/>

    <style name="Widget.MyTheme.NavigationDrawerItem">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeightSmall</item>
    </style>

    <style name="Widget.MyTheme.NavigationDrawerItem.Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/black_alpha_12</item>
    </style>

    <style name="Widget.MyTheme.NavigationDrawerItem.DividerBold">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/black_alpha_12</item>
    </style>

    <style name="Widget.MyTheme.NavigationDrawerItem.IconView">
        <item name="android:scaleType">centerInside</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.MyTheme.NavigationDrawerItem.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/font_color_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.MyTheme.Grid">
        <item name="android:background">#F5F5F5</item>

    </style>

    <style name="Widget.MyTheme.GridItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.MyTheme.GridItem.Thumbnail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/grid_height</item>

        <item name="android:background">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Widget.MyTheme.GridItem.Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/grid_two_line_footer_height</item>

        <item name="android:textColor">@color/black_alpha_87</item>
        <item name="android:padding">@dimen/grid_text_padding_16dp</item>

        <item name="android:textSize">@dimen/grid_text_size_14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>

        <item name="android:background">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

</resources>
