<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/detail_background"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/centerDetailNoti"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:layout_margin="15dp"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/font_color_black"
            android:textSize="12sp"
            android:text="산후조리원에 대한 설명은 아래의 상세 정보를 확인해 주세요. \n 궁금한 점이 있으시면 산후조리원으로 직접 연락해 주시기 바랍니다."
            android:layout_margin="10dp"
            />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        style="@style/Widget.MyTheme.NavigationDrawerItem.DividerBold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="15dp"
        android:padding="15dp" >

        <TextView
            android:id="@+id/centerDetailAddressFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color_black"
            android:textSize="12sp"
            android:text="주소" />

        <TextView
            android:id="@+id/centerDetailPhoneNumberFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/centerDetailAddressFix"
            android:textColor="@color/font_color_black"
            android:textSize="12sp"
            android:text="전화번호" />

        <TextView
            android:id="@+id/centerDetailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="@color/font_color_black"
            android:textSize="12sp"
            android:text="address"
            />

        <TextView
            android:id="@+id/centerDetailPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/centerDetailAddressFix"
            android:layout_marginLeft="50dp"
            android:textColor="@color/font_color_black"
            android:textSize="12sp"
            android:text="PhoneNumber"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        style="@style/Widget.MyTheme.NavigationDrawerItem.DividerBold"/>


</LinearLayout>