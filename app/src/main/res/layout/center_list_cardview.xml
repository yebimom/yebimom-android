<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_white_background">

        <FrameLayout
            android:id="@+id/centerImageContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/centerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#CCEEE8E9">

            <TextView
                android:id="@+id/cardCenterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Center Name Mock"
                android:textSize="20sp"
                android:textColor="@color/font_pink"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/cardCenterAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address"
                android:textSize="12sp"
                android:textColor="@color/font_pink"
                android:layout_below="@id/cardCenterName"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="6dp"
                />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>